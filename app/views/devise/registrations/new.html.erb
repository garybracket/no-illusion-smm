<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <div class="bg-white rounded-2xl shadow-2xl p-8">
      <div class="text-center mb-8">
        <h2 class="text-4xl font-bold text-gray-900 mb-2">Join No iLLusion</h2>
        <p class="text-gray-600">Start managing your social media the honest way</p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="space-y-6">
          <div>
            <%= f.label :name, "What should we call you?", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", 
                             placeholder: "Your name",
                             class: "block w-full px-4 py-3 border-2 border-gray-200 rounded-xl text-lg placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" %>
          </div>

          <div>
            <%= f.label :email, "Email address", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= f.email_field :email, autocomplete: "email", 
                              placeholder: "you@example.com",
                              class: "block w-full px-4 py-3 border-2 border-gray-200 rounded-xl text-lg placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" %>
          </div>

          <div>
            <%= f.label :content_mode, "What's your vibe?", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <div class="grid grid-cols-1 gap-3">
              <% [
                ['business', 'ðŸ’¼ Business Professional', 'Polished, mission-driven content for your company'],
                ['influencer', 'âš¡ Social Influencer', 'Engaging, trendy content that connects with your audience'], 
                ['personal', 'ðŸŽ¯ Personal Brand', 'Authentic, personal content that shows who you are']
              ].each do |value, label, description| %>
                <label class="relative flex items-start p-4 border-2 border-gray-200 rounded-xl cursor-pointer hover:border-blue-300 transition-colors group">
                  <%= f.radio_button :content_mode, value, class: "sr-only", checked: value == 'business' %>
                  <div class="flex-1">
                    <div class="flex items-center">
                      <div class="text-lg font-medium text-gray-900 group-hover:text-blue-600"><%= label %></div>
                    </div>
                    <div class="text-sm text-gray-500 mt-1"><%= description %></div>
                  </div>
                  <div class="flex-shrink-0 ml-4">
                    <div class="w-4 h-4 bg-white border-2 border-gray-300 rounded-full group-hover:border-blue-500"></div>
                  </div>
                </label>
              <% end %>
            </div>
          </div>

          <div>
            <%= f.label :password, "Password", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <% if @minimum_password_length %>
              <p class="text-sm text-gray-500 mb-2">At least <%= @minimum_password_length %> characters</p>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", 
                                 placeholder: "Make it secure!",
                                 class: "block w-full px-4 py-3 border-2 border-gray-200 rounded-xl text-lg placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" %>
          </div>

          <div>
            <%= f.label :password_confirmation, "Confirm password", class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", 
                                 placeholder: "Type it again",
                                 class: "block w-full px-4 py-3 border-2 border-gray-200 rounded-xl text-lg placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" %>
          </div>
        </div>

        <div class="pt-4">
          <%= f.submit "Create My Account â†’", 
                       class: "w-full bg-gradient-to-r from-blue-600 to-blue-700 text-white px-6 py-4 rounded-xl text-lg font-semibold hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl" %>
        </div>
      <% end %>

      <div class="mt-8 text-center">
        <p class="text-sm text-gray-600">
          Already have an account? 
          <%= link_to "Sign in", new_user_session_path, class: "font-medium text-blue-600 hover:text-blue-500" %>
        </p>
      </div>
    </div>

    <div class="mt-8 text-center">
      <p class="text-sm text-gray-500">
        By creating an account, you agree to our privacy-first approach.<br>
        We literally cannot see your content - and that's by design.
      </p>
    </div>
  </div>
</div>

<style>
  input[type="radio"]:checked + div + div .w-4 {
    background-color: #3B82F6;
    border-color: #3B82F6;
    position: relative;
  }
  
  input[type="radio"]:checked + div + div .w-4:after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 6px;
    height: 6px;
    background-color: white;
    border-radius: 50%;
  }
  
  input[type="radio"]:checked ~ div {
    border-color: #3B82F6;
    background-color: #EFF6FF;
  }
</style>
