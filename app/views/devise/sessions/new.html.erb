<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <div class="bg-white rounded-2xl shadow-2xl p-8">
      <div class="text-center mb-8">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Sign In</h2>
        <p class="text-gray-600">Welcome back to No iLLusion SMM</p>
      </div>

      <% if alert %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6" role="alert">
          <%= alert %>
        </div>
      <% end %>

      <div class="space-y-4">
        <!-- Auth0 Security Badge -->
        <div class="bg-gray-50 border border-gray-200 rounded-lg px-4 py-3 text-center">
          <p class="text-sm text-gray-600">
            <span class="inline-block align-middle">ðŸ”’</span>
            Authentication powered by 
            <span class="font-semibold text-gray-800">Auth0</span>
          </p>
          <p class="text-xs text-gray-500 mt-1">Enterprise-grade security for your account</p>
        </div>

        <!-- Sign In Button -->
        <%= link_to "Sign In", auth0_login_url('login'), 
                    class: "block w-full bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors font-semibold text-center" %>

        <div class="text-center">
          <%= link_to "Don't have an account? Sign up", auth0_login_url('signup'),
                      class: "text-blue-600 hover:text-blue-800" %>
        </div>
      </div>
    </div>
  </div>
</div>
