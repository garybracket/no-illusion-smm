<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Your Posts</h1>
      <p class="text-gray-600 dark:text-gray-400 mt-1">Manage your social media content</p>
    </div>
    
    <div class="flex space-x-3">
      <%= link_to new_post_path, 
                 class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors font-medium flex items-center" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        Create New Post
      <% end %>
      
      <%= link_to dashboard_path, 
                 class: "bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-4 py-2 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors" do %>
        ‚Üê Dashboard
      <% end %>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid md:grid-cols-4 gap-4">
    <div class="bg-white dark:bg-gray-800 rounded-lg p-4 shadow-sm border border-gray-200 dark:border-gray-700">
      <div class="flex items-center">
        <div class="bg-blue-100 dark:bg-blue-900/20 p-2 rounded-lg">
          <svg class="w-4 h-4 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-gray-600 dark:text-gray-400">Total Posts</p>
          <p class="text-lg font-semibold text-gray-900 dark:text-white"><%= @posts.count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg p-4 shadow-sm border border-gray-200 dark:border-gray-700">
      <div class="flex items-center">
        <div class="bg-green-100 dark:bg-green-900/20 p-2 rounded-lg">
          <svg class="w-4 h-4 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-gray-600 dark:text-gray-400">Published</p>
          <p class="text-lg font-semibold text-gray-900 dark:text-white"><%= @posts.where(status: 'published').count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg p-4 shadow-sm border border-gray-200 dark:border-gray-700">
      <div class="flex items-center">
        <div class="bg-yellow-100 dark:bg-yellow-900/20 p-2 rounded-lg">
          <svg class="w-4 h-4 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-gray-600 dark:text-gray-400">Scheduled</p>
          <p class="text-lg font-semibold text-gray-900 dark:text-white"><%= @posts.where(status: 'scheduled').count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg p-4 shadow-sm border border-gray-200 dark:border-gray-700">
      <div class="flex items-center">
        <div class="bg-purple-100 dark:bg-purple-900/20 p-2 rounded-lg">
          <svg class="w-4 h-4 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-gray-600 dark:text-gray-400">AI Generated</p>
          <p class="text-lg font-semibold text-gray-900 dark:text-white"><%= @posts.where(ai_generated: true).count %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Posts List -->
  <% if @posts.any? %>
    <div class="space-y-4">
      <% @posts.each do |post| %>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
          <div class="flex items-start justify-between mb-4">
            <div class="flex items-center space-x-3">
              <!-- Status Badge -->
              <% case post.status %>
              <% when 'published' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400">
                  ‚úì Published
                </span>
              <% when 'scheduled' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900/20 dark:text-yellow-400">
                  ‚è∞ Scheduled
                </span>
              <% when 'draft' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">
                  üìù Draft
                </span>
              <% when 'failed' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400">
                  ‚ùå Failed
                </span>
              <% end %>
              
              <!-- AI Generated Badge -->
              <% if post.ai_generated? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800 dark:bg-purple-900/20 dark:text-purple-400">
                  ‚ö° AI Generated
                </span>
              <% end %>
              
              <!-- Platforms -->
              <div class="flex space-x-1">
                <% post.platforms.each do |platform| %>
                  <% case platform %>
                  <% when 'linkedin' %>
                    <span class="text-blue-600 dark:text-blue-400" title="LinkedIn">üíº</span>
                  <% when 'facebook' %>
                    <span class="text-blue-500 dark:text-blue-400" title="Facebook">üìò</span>
                  <% when 'instagram' %>
                    <span class="text-pink-500 dark:text-pink-400" title="Instagram">üì∏</span>
                  <% when 'tiktok' %>
                    <span class="text-black dark:text-white" title="TikTok">üéµ</span>
                  <% end %>
                <% end %>
              </div>
            </div>
            
            <div class="flex items-center space-x-2">
              <span class="text-xs text-gray-500 dark:text-gray-400">
                <%= post.created_at.strftime("%b %d, %Y at %I:%M %p") %>
              </span>
              
              <!-- Actions Dropdown -->
              <div class="relative">
                <button class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"></path>
                  </svg>
                </button>
              </div>
            </div>
          </div>
          
          <!-- Privacy-Safe Content Display -->
          <div class="mb-4">
            <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4">
              <p class="text-gray-700 dark:text-gray-300 text-sm">
                üîí <%= post.display_content %>
              </p>
              <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                Content not stored for privacy
              </p>
            </div>
          </div>
          
          <!-- Scheduling Info -->
          <% if post.scheduled_for.present? %>
            <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg p-3 mb-4">
              <p class="text-yellow-800 dark:text-yellow-400 text-sm">
                ‚è∞ Scheduled for <%= post.scheduled_for.strftime("%B %d, %Y at %I:%M %p") %>
              </p>
            </div>
          <% end %>
          
          <!-- Actions -->
          <div class="flex items-center space-x-4 text-sm">
            <%= link_to post_path(post), class: "text-blue-600 dark:text-blue-400 hover:underline" do %>
              View Details
            <% end %>
            
            <%= link_to edit_post_path(post), class: "text-gray-600 dark:text-gray-400 hover:underline" do %>
              Edit
            <% end %>
            
            <% if post.status == 'draft' %>
              <%= link_to "Publish Now", post_path(post), method: :patch, 
                         params: { publish_now: '1' },
                         class: "text-green-600 dark:text-green-400 hover:underline",
                         data: { confirm: "Publish this post now?" } %>
            <% end %>
            
            <%= link_to post_path(post), method: :delete, 
                       class: "text-red-600 dark:text-red-400 hover:underline",
                       data: { confirm: "Are you sure you want to delete this post?" } do %>
              Delete
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-12">
      <div class="mx-auto w-24 h-24 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center mb-4">
        <svg class="w-8 h-8 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">No posts yet</h3>
      <p class="text-gray-600 dark:text-gray-400 mb-6">Get started by creating your first social media post.</p>
      <%= link_to new_post_path, 
                 class: "bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors font-medium inline-flex items-center" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        Create Your First Post
      <% end %>
    </div>
  <% end %>
</div>