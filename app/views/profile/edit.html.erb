<div class="space-y-8">
  <!-- Header -->
  <div class="bg-gradient-to-r from-blue-50 to-purple-50 rounded-2xl p-8 border border-blue-100">
    <h1 class="text-4xl font-bold text-gray-900 mb-2">Edit Profile</h1>
    <p class="text-xl text-gray-600">Update your information and preferences</p>
  </div>

  <!-- Profile Form -->
  <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100">
    <%= form_with model: @user, url: user_profile_path, local: true, class: "space-y-6" do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <h3 class="text-red-800 font-medium">Please fix the following errors:</h3>
          <ul class="text-red-700 text-sm mt-2 space-y-1">
            <% @user.errors.full_messages.each do |message| %>
              <li>â€¢ <%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid md:grid-cols-2 gap-6">
        <!-- Basic Information -->
        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900">Basic Information</h3>
          
          <div>
            <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <div>
            <%= form.label :content_mode, "Content Style", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.select :content_mode, 
                           options_for_select([
                             ['Business Professional', 'business'],
                             ['Influencer/Creator', 'influencer'], 
                             ['Personal Brand', 'personal']
                           ], @user.content_mode),
                           {},
                           { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
          </div>

          <div>
            <%= form.label :bio, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_area :bio, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
        </div>

        <!-- Mission & Preferences -->
        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900">Mission & AI</h3>
          
          <div>
            <%= form.label :mission_statement, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_area :mission_statement, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
            <p class="text-sm text-gray-500 mt-1">What drives your business or content?</p>
          </div>

          <div>
            <label class="flex items-center">
              <%= form.check_box :ai_enabled, class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
              <span class="ml-2 text-sm font-medium text-gray-700">Enable AI features</span>
            </label>
          </div>
        </div>
      </div>

      <!-- Skills -->
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Skills & Expertise</h3>
        <div id="skills-container">
          <% if @user.skills.any? %>
            <% @user.skills.each_with_index do |skill, index| %>
              <div class="flex items-center space-x-2 mb-2">
                <input type="text" name="user[skills][]" value="<%= skill %>" 
                       class="flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                <button type="button" onclick="this.parentElement.remove()" 
                        class="text-red-600 hover:text-red-800 px-2 py-1">Remove</button>
              </div>
            <% end %>
          <% else %>
            <div class="flex items-center space-x-2 mb-2">
              <input type="text" name="user[skills][]" placeholder="e.g., Marketing, Design, Writing" 
                     class="flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
              <button type="button" onclick="this.parentElement.remove()" 
                      class="text-red-600 hover:text-red-800 px-2 py-1">Remove</button>
            </div>
          <% end %>
        </div>
        <button type="button" onclick="addSkillField()" 
                class="text-blue-600 hover:text-blue-800 text-sm font-medium">+ Add Skill</button>
      </div>

      <!-- Actions -->
      <div class="flex items-center space-x-4 pt-6 border-t border-gray-200">
        <%= form.submit "Save Changes", class: "bg-blue-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-blue-700 transition-colors" %>
        <%= link_to "Cancel", dashboard_path, class: "text-gray-600 hover:text-gray-800 px-6 py-3" %>
      </div>
    <% end %>
  </div>
</div>

<script>
function addSkillField() {
  const container = document.getElementById('skills-container');
  const div = document.createElement('div');
  div.className = 'flex items-center space-x-2 mb-2';
  div.innerHTML = `
    <input type="text" name="user[skills][]" placeholder="e.g., Marketing, Design, Writing" 
           class="flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
    <button type="button" onclick="this.parentElement.remove()" 
            class="text-red-600 hover:text-red-800 px-2 py-1">Remove</button>
  `;
  container.appendChild(div);
}
</script>