    <div class="group bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 border border-gray-100 dark:border-gray-700">
      <div class="flex items-center justify-between mb-4">
        <div class="bg-green-100 dark:bg-green-900/20 p-3 rounded-xl">
          <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
        <span class="text-sm text-green-600 dark:text-green-400 font-medium">‚úì Ready</span>
      </div>
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Edit Profile</h3>
      <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">Update your profile information</p>
      <%= link_to edit_user_profile_path, 
                  class: "block w-full text-center bg-green-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-green-700 transition-colors" do %>
        Edit Profile
      <% end %>
    </div>

    <div class="group bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 border border-gray-100 dark:border-gray-700">
