<!-- Professional SMM Dashboard -->
<div class="min-h-screen bg-gray-50 dark:bg-slate-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Dashboard Header -->
    <div class="mb-8">
      <div class="bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 rounded-2xl p-8 text-white shadow-xl">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold mb-2">Social Media Command Center</h1>
            <p class="text-blue-100 text-lg">Welcome back, <span class="font-semibold"><%= @user.name %></span></p>
            <div class="flex items-center space-x-4 mt-4">
              <div class="bg-white/20 backdrop-blur-sm px-3 py-1 rounded-full text-sm font-medium">
                <%= @user.content_mode.humanize %> Mode
              </div>
              <% if @user.ai_enabled? %>
                <div class="bg-green-500/20 backdrop-blur-sm px-3 py-1 rounded-full text-sm font-medium">
                  ‚ö° AI Enabled
                </div>
              <% end %>
              <div class="bg-white/20 backdrop-blur-sm px-3 py-1 rounded-full text-sm font-medium">
                <%= pluralize(@user.posts.count, 'Post') %> Created
              </div>
            </div>
          </div>
          <div class="hidden md:block">
            <div class="text-6xl opacity-30">üöÄ</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions Bar -->
    <div class="mb-8">
      <div class="bg-white dark:bg-slate-800 rounded-2xl p-6 shadow-lg border border-gray-200 dark:border-slate-700">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <%= link_to new_post_path, class: "group flex items-center p-4 bg-blue-50 dark:bg-blue-900/20 rounded-xl hover:bg-blue-100 dark:hover:bg-blue-900/30 transition-all duration-200" do %>
            <div class="bg-blue-600 p-2 rounded-lg mr-3">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
            </div>
            <div>
              <p class="font-medium text-gray-900 dark:text-white">Create Post</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">New content</p>
            </div>
          <% end %>
          
          <%= link_to posts_path, class: "group flex items-center p-4 bg-purple-50 dark:bg-purple-900/20 rounded-xl hover:bg-purple-100 dark:hover:bg-purple-900/30 transition-all duration-200" do %>
            <div class="bg-purple-600 p-2 rounded-lg mr-3">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <div>
              <p class="font-medium text-gray-900 dark:text-white">Manage Posts</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">View content</p>
            </div>
          <% end %>
          
          <%= link_to edit_user_profile_path, class: "group flex items-center p-4 bg-green-50 dark:bg-green-900/20 rounded-xl hover:bg-green-100 dark:hover:bg-green-900/30 transition-all duration-200" do %>
            <div class="bg-green-600 p-2 rounded-lg mr-3">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <div>
              <p class="font-medium text-gray-900 dark:text-white">Edit Profile</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">Update info</p>
            </div>
          <% end %>
          
          <%= link_to pricing_path, class: "group flex items-center p-4 bg-yellow-50 dark:bg-yellow-900/20 rounded-xl hover:bg-yellow-100 dark:hover:bg-yellow-900/30 transition-all duration-200" do %>
            <div class="bg-yellow-600 p-2 rounded-lg mr-3">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <div>
              <p class="font-medium text-gray-900 dark:text-white">Upgrade</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">Pro features</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

