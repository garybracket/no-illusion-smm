            <% if @user.posts.recent.limit(3).any? %>
              <div class="space-y-3">
                <% @user.posts.recent.limit(3).each do |post| %>
                  <div class="flex items-start space-x-3 p-3 bg-gray-50 dark:bg-slate-700/50 rounded-lg">
                    <div class="bg-blue-600 p-1.5 rounded-lg">
                      <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                      </svg>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900 dark:text-white truncate">
                        <%= truncate(post.content, length: 40) %>
                      </p>
                      <p class="text-xs text-gray-600 dark:text-gray-400">
                        <%= time_ago_in_words(post.created_at) %> ago
                      </p>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-6">
                <div class="text-gray-400 mb-2">üìù</div>
                <p class="text-sm text-gray-600 dark:text-gray-400">No recent posts</p>
                <p class="text-xs text-gray-500 dark:text-gray-500 mt-1">Create your first post to get started</p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Admin Panel (for admin users) -->
        <% if current_user.email == 'real.ener.g@gmail.com' %>
          <div class="bg-gradient-to-r from-orange-400 to-red-500 rounded-2xl shadow-lg text-white">
            <div class="p-6">
              <h3 class="text-lg font-semibold mb-2">üîí Admin Panel</h3>
              <p class="text-orange-100 text-sm mb-4">Manage beta program</p>
              <%= link_to beta_signups_path, class: "block w-full text-center bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-white/30 transition-all duration-200" do %>
                Beta Dashboard
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Profile Completion -->
    <% if @user.bio.blank? || @user.skills.blank? || @user.mission_statement.blank? %>
      <div class="mt-8">
        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 border border-blue-200 dark:border-blue-700 rounded-2xl p-6">
          <div class="flex items-start space-x-4">
            <div class="bg-blue-600 p-2 rounded-lg">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-blue-900 dark:text-blue-300 mb-2">Complete Your Profile</h3>
              <p class="text-blue-800 dark:text-blue-400 text-sm mb-4">
                Enhance your AI-generated content by completing your profile with professional details.
              </p>
              <div class="flex flex-col sm:flex-row gap-3">
                <%= link_to edit_user_profile_path, class: "bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700 transition-colors text-center" do %>
                  Complete Profile Manually
                <% end %>
                <%= button_to "üöÄ Quick Setup (Gary's Data)", setup_gary_profile_path, method: :post, class: "bg-indigo-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-indigo-700 transition-colors", data: { confirm: "Populate profile with Gary's professional data?" } %>
