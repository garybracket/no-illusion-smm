    <div class="lg:col-span-2 bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg border border-gray-100 dark:border-gray-700">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Your Profile</h2>
        <%= link_to "Edit Profile", edit_user_profile_path, 
                    class: "bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700 transition-colors" %>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8">
        <div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Basic Information</h3>
          <div class="space-y-3">
            <div>
              <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Name</span>
              <p class="text-gray-900 dark:text-white"><%= @user.name %></p>
            </div>
            <div>
              <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Email</span>
              <p class="text-gray-900 dark:text-white"><%= @user.email %></p>
            </div>
            <div>
              <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Content Style</span>
              <p class="text-gray-900 dark:text-white"><%= @user.content_mode.humanize %></p>
            </div>
          </div>
        </div>
        
        <div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Profile Details</h3>
          <div class="space-y-3">
            <div>
              <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Bio</span>
              <p class="text-gray-900 dark:text-white"><%= @user.bio.present? ? truncate(@user.bio, length: 150) : "Not set yet" %></p>
            </div>
            <div>
              <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Mission Statement</span>
              <p class="text-gray-900 dark:text-white"><%= @user.mission_statement.present? ? @user.mission_statement : "Not set yet" %></p>
            </div>
            <div>
              <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Skills</span>
              <% if @user.skills.present? && @user.skills.any? %>
                <div class="flex flex-wrap gap-2 mt-1">
                  <% @user.skills.each do |skill| %>
                    <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200">
                      <%= skill %>
                    </span>
                  <% end %>
                </div>
              <% else %>
                <p class="text-gray-900 dark:text-white">No skills added yet</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Profile Setup -->
      <% if @user.bio.blank? || @user.skills.blank? || @user.mission_statement.blank? %>
        <div class="mt-6 p-4 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-700 rounded-lg">
          <h4 class="text-sm font-semibold text-blue-800 dark:text-blue-300 mb-2">Quick Profile Setup</h4>
          <p class="text-xs text-blue-600 dark:text-blue-400 mb-3">Populate your profile with Gary's professional data from the docs folder</p>
          <%= button_to "üöÄ Setup Gary's Profile", setup_gary_profile_path, 
                        method: :post,
                        class: "bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700 transition-colors",
                        data: { confirm: "This will populate your profile with Gary's bio, skills, and mission statement. Continue?" } %>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Account Status -->
      <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg border border-gray-100 dark:border-gray-700 p-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Account Status</h3>
        
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-sm font-medium text-gray-600 dark:text-gray-400">Subscription</span>
            <span class="bg-blue-100 dark:bg-blue-900/20 text-blue-800 dark:text-blue-400 text-xs font-medium px-2.5 py-0.5 rounded-full">Free Tier</span>
          </div>
          
          <div class="flex items-center justify-between">
            <span class="text-sm font-medium text-gray-600 dark:text-gray-400">AI Posts</span>
            <span class="text-sm font-semibold text-gray-900 dark:text-white">10/10 remaining</span>
          </div>
          
          <div class="flex items-center justify-between">
            <span class="text-sm font-medium text-gray-600 dark:text-gray-400">Platforms</span>
            <span class="text-sm font-semibold text-gray-900 dark:text-white">
              <%= @user.platform_connections.active.count %> connected
            </span>
          </div>
          
          <%= link_to pricing_path, class: "block w-full text-center bg-gradient-to-r from-blue-600 to-purple-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:from-blue-700 hover:to-purple-700 transition-all duration-200" do %>
            üöÄ Upgrade to Pro
          <% end %>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg border border-gray-100 dark:border-gray-700 p-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Recent Activity</h3>
        
        <% if @user.posts.recent.limit(3).any? %>
          <div class="space-y-3">
            <% @user.posts.recent.limit(3).each do |post| %>
              <div class="flex items-start space-x-3 p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                <div class="bg-blue-600 p-1.5 rounded-lg">
                  <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900 dark:text-white truncate">
                    <%= truncate(post.content, length: 40) %>
                  </p>
                  <p class="text-xs text-gray-600 dark:text-gray-400">
                    <%= time_ago_in_words(post.created_at) %> ago
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-6">
            <div class="text-gray-400 dark:text-gray-500 mb-2">üìù</div>
            <p class="text-sm text-gray-600 dark:text-gray-400">No recent posts</p>
            <p class="text-xs text-gray-500 dark:text-gray-500 mt-1">Create your first post to get started</p>
          </div>
        <% end %>
      </div>

      <!-- Admin Panel (for admin users) -->
      <% if current_user.email == 'real.ener.g@gmail.com' %>
        <div class="bg-gradient-to-r from-orange-400 to-red-500 rounded-2xl shadow-lg text-white p-6">
          <h3 class="text-lg font-semibold mb-2">üîí Admin Panel</h3>
          <p class="text-orange-100 text-sm mb-4">Manage beta program</p>
          <%= link_to beta_signups_path, class: "block w-full text-center bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-white/30 transition-all duration-200" do %>
            Beta Dashboard
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>